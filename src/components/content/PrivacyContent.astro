---
import { useTranslations } from '../../i18n/utils';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import puntasFlechaImg from '../../assets/images/puntas_flecha.webp';

interface Props {
  lang: 'es' | 'en' | 'ca';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<Layout
	title={`${t('privacy.title')} | Pedra Tallada`}
	description={t('privacy.title')}
>
	<section class="max-w-4xl mx-auto pt-6 pb-12 md:pt-10 md:pb-20 px-4">
		<h1 class="text-3xl md:text-5xl font-serif text-stone-900 mb-8 text-center">{t('privacy.title')}</h1>
        
        <Image 
            src={puntasFlechaImg} 
            alt="Puntas de flecha arqueolÃ³gicas" 
            class="w-full h-48 md:h-80 object-cover rounded-3xl mb-12 shadow-lg" 
            quality={80} 
            format="webp" 
        />

		<div class="text-stone-700 text-lg mx-auto space-y-6">
			<p set:html={t('privacy.intro')} class="leading-relaxed" />
			
            <h3 class="text-2xl font-serif font-bold text-clay-dark pt-4">{t('privacy.collection_title')}</h3>
			<p set:html={t('privacy.collection_text')} class="leading-relaxed" />
			
            <h3 class="text-2xl font-serif font-bold text-clay-dark pt-4">{t('privacy.use_title')}</h3>
			<p set:html={t('privacy.use_text')} class="leading-relaxed" />
			
            <h3 class="text-2xl font-serif font-bold text-clay-dark pt-4">{t('privacy.contact_title')}</h3>
			<p set:html={t('privacy.contact')} class="leading-relaxed" />
		</div>
	</section>
</Layout>
