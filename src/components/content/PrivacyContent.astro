---
import { useTranslations } from '../../i18n/utils';
import Layout from '../../layouts/Layout.astro';

interface Props {
  lang: 'es' | 'en' | 'ca';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<Layout
	title={`${t('privacy.title')} | Pedra Tallada`}
	description={t('privacy.title')}
>
	<section class="max-w-3xl mx-auto py-12 md:py-20 px-4">
		<h1 class="text-3xl md:text-4xl font-serif text-stone-900 mb-8">{t('privacy.title')}</h1>
		<div class="prose prose-stone">
			<p>{t('privacy.intro')}</p>
			
            <h3>{t('privacy.collection_title')}</h3>
			<p>{t('privacy.collection_text')}</p>
			
            <h3>{t('privacy.use_title')}</h3>
			<p>{t('privacy.use_text')}</p>
			
            <h3>Contact</h3>
			<p>{t('privacy.contact')}</p>
		</div>
	</section>
</Layout>
