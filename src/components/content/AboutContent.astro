---
import { pagesContent } from '../../data/pages';
import Layout from '../../layouts/Layout.astro';

interface Props {
  lang: 'es' | 'en' | 'ca';
}

const { lang } = Astro.props;
const content = pagesContent.about[lang];
---

<Layout
	title={`${content.title} | Pedra Tallada`}
	description={content.intro.replace(/<[^>]*>?/gm, '').substring(0, 160)}
>
	<section class="max-w-4xl mx-auto py-12 md:py-20 px-4">
		<h1 class="text-4xl md:text-5xl font-serif text-stone-900 mb-8">{content.title}</h1>
		<div class="prose prose-stone prose-lg">
			<p set:html={content.intro} />
			<p>{content.mission}</p>
		</div>
	</section>
</Layout>
