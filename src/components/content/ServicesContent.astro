---
import { pagesContent } from '../../data/pages';
import Layout from '../../layouts/Layout.astro';

interface Props {
  lang: 'es' | 'en' | 'ca';
}

const { lang } = Astro.props;
const content = pagesContent.services[lang];
---

<Layout
	title={`${content.title} | Pedra Tallada`}
	description={content.title}
>
	<section class="max-w-4xl mx-auto py-12 md:py-20 px-4">
		<h1 class="text-4xl md:text-5xl font-serif text-stone-900 mb-8">{content.title}</h1>
		<div class="grid md:grid-cols-2 gap-8">
            {content.items.map(item => (
                <div class="bg-white p-8 rounded-xl shadow-sm border border-stone-100">
                    <h2 class="text-2xl font-serif text-stone-900 mb-4">{item.title}</h2>
                    <p class="text-stone-600">{item.desc}</p>
                </div>
            ))}
		</div>
	</section>
</Layout>
