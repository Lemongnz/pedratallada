---
import { useTranslations } from '../../i18n/utils';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

import imgExcavacion from '../../assets/images/arq_urb_2.webp';
import imgDivulgacion from '../../assets/images/education_card.webp';
import imgConsultoria from '../../assets/images/laboratorio.webp';

interface Props {
  lang: 'es' | 'en' | 'ca';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<Layout
	title={`${t('services.title')} | Pedra Tallada`}
	description={t('services.title')}
>
	<section class="max-w-7xl mx-auto pt-12 pb-20 md:pt-20 md:pb-32 px-4">
        <div class="text-center mb-16 md:mb-24">
		    <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-stone-900 mb-6">{t('services.title')}</h1>
            <div class="h-1 w-24 bg-clay-dark mx-auto rounded-full"></div>
        </div>

		<div class="flex flex-col gap-16 md:gap-24">
            <!-- Excavaciones (Image Left) -->
            <div class="flex flex-col md:flex-row items-center gap-8 md:gap-16 group">
                <div class="w-full md:w-1/2 relative h-80 md:h-112 rounded-3xl overflow-hidden shadow-2xl">
                    <Image src={imgExcavacion} alt={t('services.item1.title')} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000" quality={80} format="webp" />
                    <div class="absolute inset-0 bg-linear-to-t from-black/50 via-transparent to-transparent"></div>
                </div>
                <div class="w-full md:w-1/2 flex flex-col justify-center">
                    <h2 class="text-3xl md:text-4xl font-serif font-bold text-stone-900 mb-6">{t('services.item1.title')}</h2>
                    <p class="text-stone-600 text-lg leading-relaxed">{t('services.item1.desc')}</p>
                </div>
            </div>

            <!-- Divulgación (Image Right) -->
            <div class="flex flex-col md:flex-row-reverse items-center gap-8 md:gap-16 group">
                <div class="w-full md:w-1/2 relative h-80 md:h-112 rounded-3xl overflow-hidden shadow-2xl md:ml-auto">
                    <Image src={imgDivulgacion} alt={t('services.item2.title')} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000" quality={80} format="webp" />
                    <div class="absolute inset-0 bg-linear-to-t from-black/50 via-transparent to-transparent"></div>
                </div>
                <div class="w-full md:w-1/2 flex flex-col justify-center">
                    <h2 class="text-3xl md:text-4xl font-serif font-bold text-stone-900 mb-6">{t('services.item2.title')}</h2>
                    <p class="text-stone-600 text-lg leading-relaxed">{t('services.item2.desc')}</p>
                </div>
            </div>

            <!-- Consultoría (Image Left) -->
            <div class="flex flex-col md:flex-row items-center gap-8 md:gap-16 group">
                <div class="w-full md:w-1/2 relative h-80 md:h-112 rounded-3xl overflow-hidden shadow-2xl">
                    <Image src={imgConsultoria} alt={t('services.item3.title')} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000" quality={80} format="webp" />
                    <div class="absolute inset-0 bg-linear-to-t from-black/50 via-transparent to-transparent"></div>
                </div>
                <div class="w-full md:w-1/2 flex flex-col justify-center">
                    <h2 class="text-3xl md:text-4xl font-serif font-bold text-stone-900 mb-6">{t('services.item3.title')}</h2>
                    <p class="text-stone-600 text-lg leading-relaxed">{t('services.item3.desc')}</p>
                </div>
            </div>
		</div>
	</section>
</Layout>
