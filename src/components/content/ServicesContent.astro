---
import { useTranslations } from '../../i18n/utils';
import Layout from '../../layouts/Layout.astro';

interface Props {
  lang: 'es' | 'en' | 'ca';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<Layout
	title={`${t('services.title')} | Pedra Tallada`}
	description={t('services.title')}
>
	<section class="max-w-4xl mx-auto py-12 md:py-20 px-4">
		<h1 class="text-4xl md:text-5xl font-serif text-stone-900 mb-8">{t('services.title')}</h1>
		<div class="grid md:grid-cols-2 gap-8">
            <div class="bg-white p-8 rounded-xl shadow-sm border border-stone-100">
                <h2 class="text-2xl font-serif text-stone-900 mb-4">{t('services.item1.title')}</h2>
                <p class="text-stone-600">{t('services.item1.desc')}</p>
            </div>
            <div class="bg-white p-8 rounded-xl shadow-sm border border-stone-100">
                <h2 class="text-2xl font-serif text-stone-900 mb-4">{t('services.item2.title')}</h2>
                <p class="text-stone-600">{t('services.item2.desc')}</p>
            </div>
            <div class="bg-white p-8 rounded-xl shadow-sm border border-stone-100">
                <h2 class="text-2xl font-serif text-stone-900 mb-4">{t('services.item3.title')}</h2>
                <p class="text-stone-600">{t('services.item3.desc')}</p>
            </div>
            <div class="bg-white p-8 rounded-xl shadow-sm border border-stone-100">
                <h2 class="text-2xl font-serif text-stone-900 mb-4">{t('services.item4.title')}</h2>
                <p class="text-stone-600">{t('services.item4.desc')}</p>
            </div>
		</div>
	</section>
</Layout>
	</section>
</Layout>
